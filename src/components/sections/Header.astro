---
interface Props {
  description: string;
}

const { description } = Astro.props;
---

<div>
  <div class="flex flex-col gap-2 items-start justify-center w-full">
    <slot />
  </div>
</div><p
  class="w-full md:w-1/2 my-2 text-lg lg:text-xl font-normal text-default-500 block max-w-full"
>
  {description}
</p>
